{
	"files": [
		"./src/server/main.ts",
	],
	"include": [
		"./src/server/**/*",
		"src/@types/**/*",
		"src/@types/global.d.ts",
	],
	"compilerOptions": {
		"typeRoots": [ "/src/@types" ],
		"rootDir": "./src/server",
		"outDir": "build/server",
		"target": "ES2019",
		"module": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"],
		"strict": true,
		"allowJs": true,
	},
}
